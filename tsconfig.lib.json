{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "declaration": true,
    "baseUrl": "./node_modules",
    "rootDir": "./src",
    "composite": true
  },
  "include": ["./src"],
  "exclude": ["./e2e", "**/*.spec.ts"]
}

{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react",

    "module": "ES2020",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,

    "downlevelIteration": true,

    "lib": ["dom", "es2020"],

    "strict": true,

    "rootDir": "./src",
    "baseUrl": "./node_modules",
    "paths": {
      "@/*": ["../src/*"]
    },

    "sourceMap": true,

    "types": ["vite/client"]
  },
  "include": ["./src"]
}

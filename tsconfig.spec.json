{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./node_modules",
    "rootDir": "./",
    "inlineSourceMap": true,
    "composite": true,
    "paths": {
      "static-js": ["./src/index.ts"]
    }
  },
  "include": ["./src", "./e2e"],
  "exclude": ["node_modules", "dist"]
}
